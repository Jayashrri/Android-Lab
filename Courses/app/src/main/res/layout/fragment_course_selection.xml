<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".CourseSelection">

    <TextView
        android:id="@+id/showRollNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="10sp"
        android:gravity="center"
        android:text=""
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select the desired courses from below."
        android:textAllCaps="false"
        android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    <LinearLayout
        android:id="@+id/course_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/checkbox_crypto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PRINCIPLES OF CRYPTOGRAPHY"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <CheckBox
            android:id="@+id/checkbox_mpmc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MICROPROCESSORS AND MICROCONTROLLERS"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <CheckBox
            android:id="@+id/checkbox_mad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MOBILE APPLICATIONS DEVELOPMENT"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <CheckBox
            android:id="@+id/checkbox_ai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ARTIFICIAL INTELLIGENCE AND EXPERT SYSTEMS"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

        <CheckBox
            android:id="@+id/checkbox_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DATA WAREHOUSING AND DATA MINING"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SUBMIT" />

</LinearLayout>